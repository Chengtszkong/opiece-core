{
    "name": "opiece-core",
    "private": false,
    "version": "0.0.2",
    "type": "module",
    "main": "dist/opiece-core.umd.js",
    "module": "dist/opiece-core.es.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/*"
    ],
    "scripts": {
