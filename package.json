        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-prettier": "^5.2.3",
        "prettier": "^3.5.3",
        "typescript": "~5.7.2",
        "vite": "^6.2.0",
        "vite-plugin-dts": "^4.5.3",
        "vitest": "^3.0.9"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
